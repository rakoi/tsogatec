<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


       <item android:top="100dp" android:bottom="10dp">
           <rotate
               android:fromDegrees="45"
               android:toDegrees="45"
               android:pivotX="13%"
               android:pivotY="-5%"
               >
               <shape
                   android:shape="rectangle"
                   >
                   <stroke android:color="@color/themeColor" android:width="50dp"/>

                   <solid
                       android:color="@color/white"
                       >

                   </solid>
               </shape>

           </rotate>
       </item>

</layer-list>