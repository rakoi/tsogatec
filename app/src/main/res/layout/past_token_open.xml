<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingLeft="20dp"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Meter No:"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="15dp"
            android:textColor="@color/darkblue"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="17317"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:textColor="@color/darkblue"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/closeicon_round"
            android:id="@+id/closeIcon"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkgray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:text="Token Id"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/alertText"
        android:layout_marginTop="20dp"
        android:text="20214423233"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/tokenbg"
        android:textSize="14dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:text="Units"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="190kwh"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:text="Amount :"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="800"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:text="Tax Amount"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34.5"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        />

    <Button

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/buttonbackground"
        android:text="Resend Reciept"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>